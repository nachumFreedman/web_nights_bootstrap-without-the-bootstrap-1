var grade = prompt('can you give me a grade');

var coefficient = prompt('can you give me a coefficient')

var userGrade = [];
userGrade.push(grade)
var userCoefficient = [];
userCoefficient.push(coefficient)


var average = userGrade * userCoefficient / 2;

if (userGrade == ''){prompt('can you please give me a grade')}
if (userCoefficient == ''){prompt('can you please give me a coefficient')}

alert('average = ', average)


